<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daview.mapper.MemberMapper">

	<!-- 중복되는 닉네임 있는지 db 확인 반환타입은 int로 -->
	<select id="nickChk" resultType="int">
		select count(*)
		from member
		where m_nick=#{m_nick}
	</select>

	<!-- 회원 등록 insert -->
	<insert id="insertMember">
		insert into member (m_email,m_pw,m_nick)values
		(#{m_email},#{m_pw},#{m_nick})
	</insert>

	<!-- 로그인 하기 위한 user 체크 -->
	<select id="userChk" resultType="int">
		select count(*)
		from member
		where m_email like #{m_email} and m_pw=#{m_pw}
	</select>
	
	<!-- 해당 이메일의 닉네임 가져오기 -->
	<select id="getM_Nick" resultType="String">
		select m_nick
		from member
		where m_email like #{m_email}
	</select>
</mapper>